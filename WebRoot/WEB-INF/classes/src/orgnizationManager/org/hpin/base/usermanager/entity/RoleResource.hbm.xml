<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name = "org.hpin.base.usermanager.entity.RoleResource" table="um_role_resource">
        <!--  
		<id name="id" type="java.lang.Long">
			<column name="id" />
			 <generator class="increment" />
		</id>-->
		<id name="id" type="java.lang.String" column="id">
	      <generator class="uuid"/>
	    </id>

		<property name="roleId" type="java.lang.String">
			<column name="role_id" />
		</property>

		<property name="resourceId" type="java.lang.String">
			<column name="resource_id" />
		</property>

		<property name="isMenu" type="java.lang.Integer">
			<column name="is_menu" />
		</property>


	</class>
</hibernate-mapping>
